{
  "src_folders": ["tests/e2e/cases"],
  "output_folders": "reports",
  "custom_commands_path": "tests/e2e/commands",
  "custom_assertions_path": "tests/e2e/assertions",
  "globals_path": "tests/e2e/globals",
  "selenium": {
    "start_process": true,
    "server_path": "./bin/selenium-server-standalone-2.53.0.jar",
    "log_path": "",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.firefox.bin": "/usr/bin/firefox"
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost:3030",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "tests/e2e/screenshots"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
